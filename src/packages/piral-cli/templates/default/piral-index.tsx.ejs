import * as React from 'react';
import { renderInstance, requestPiletsFromGraphQL, setupGqlClient } from 'piral';

const client = setupGqlClient();

renderInstance({
  settings: {
    gql: client,
  },
  layout: {
    ErrorInfo: ({ type }) => (
      <span style={{ color: 'red', fontWeight: 'bold' }}>Error: {type}</span>
    ),
  },
  requestPilets() {
    return requestPiletsFromGraphQL(client);
  },
});

export * from '<%- packageName %>/lib/types';

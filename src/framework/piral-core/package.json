{
  "name": "piral-core",
  "version": "0.14.14",
  "description": "The core library for creating a Piral instance.",
  "keywords": [
    "portal",
    "smapiot",
    "modules",
    "microfrontend",
    "spa",
    "core",
    "functional"
  ],
  "author": "smapiot",
  "homepage": "https://piral.io",
  "license": "MIT",
  "module": "esm/index.js",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "esm",
    "lib",
    "src",
    "debug.codegen",
    "debug.codegen.*",
    "dependencies.codegen",
    "dependencies.codegen.*"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/smapiot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smapiot/piral.git"
  },
  "bugs": {
    "url": "https://github.com/smapiot/piral/issues"
  },
  "scripts": {
    "cleanup": "rimraf esm lib",
    "build": "yarn build:commonjs && yarn build:esnext",
    "build:commonjs": "tsc --project tsconfig.json --outDir lib --module commonjs",
    "build:esnext": "tsc --project tsconfig.json --outDir esm --module esnext",
    "typedoc": "typedoc --json ../../../docs/types/piral-core.json src --exclude \"src/**/*.test.*\"",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "dependencies": {
    "@dbeining/react-atom": "^4.0.0",
    "piral-base": "^0.14.14",
    "piral-debug-utils": "^0.14.14"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "react-router": "5.x",
    "react-router-dom": "5.x"
  },
  "devDependencies": {
    "@types/history": "^4.7.8",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0"
  },
  "sharedDependencies": [
    "react",
    "react-dom",
    "react-router",
    "react-router-dom",
    "history",
    "tslib",
    "path-to-regexp",
    "@libre/atom",
    "@dbeining/react-atom"
  ]
}

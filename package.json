{
  "name": "piral",
  "private": true,
  "workspaces": [
    "src/packages/*",
    "src/pages/*",
    "src/samples/*"
  ],
  "scripts": {
    "bootstrap": "lerna clean --yes && lerna bootstrap",
    "setup": "yarn bootstrap && yarn build && yarn bootstrap",
    "build": "lerna run build",
    "build:docs": "piral build src/pages/docs/src/index.html --target dist/docs/index.html",
    "watch:docs": "piral debug src/pages/docs/src/index.html",
    "build:page": "piral build src/pages/www/src/index.html --target dist/www/index.html",
    "watch:page": "piral debug src/pages/www/src/index.html",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --project tsconfig.json",
    "prettify": "prettier --config prettier.config.js --write 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "demos:core": "piral debug src/samples/piral-core/src/index.html",
    "demos:full": "piral debug src/samples/piral/src/index.html",
    "prepublish": "yarn build",
    "release": "lerna publish",
    "docgen:cli": "node tools/generate-command-docs.js",
    "docgen:page": "node tools/generate-page-docs.js",
    "docgen:types": "lerna run typedoc",
    "docgen": "yarn docgen:cli && yarn docgen:types && yarn docgen:page",
    "ci:version": "node tools/changelog-version.js",
    "ci:version-update": "yarn ci:version --update && git add CHANGELOG.md && git commit -m UpdateReleaseDate",
    "ci:docs": "yarn docgen && yarn build:docs && git checkout -- .",
    "ci:prerelease": "lerna publish $(yarn --silent ci:version)-pre.$BUILD_BUILDID --yes --force-publish --no-git-tag-version --no-push --dist-tag next && git checkout -- .",
    "ci:release": "lerna publish $(yarn --silent ci:version) --yes --force-publish"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.18",
    "@types/jest": "^24.0.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "jest": "^24.1.0",
    "jest-cli": "^24.1.0",
    "lerna": "^3.10.7",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3"
  }
}

{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Sample (Chrome)",
            "url": "http://localhost:1234",
            "webRoot": "${workspaceFolder}",
            "breakOnLoad": true,
            "sourceMaps": true,
            "sourceMapPathOverrides": {
              "*": "${webRoot}/*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Devserver",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/.bin/piral",
            "args": ["debug", "./packages/piral-sample/src/index.html"]
        },
        {
          "name": "Debug Jest Tests Windows",
          "type": "node",
          "request": "launch",
          "runtimeArgs": [
            "--inspect-brk",
            "${workspaceRoot}/node_modules/jest/bin/jest.js /src/framework/piral-base/src/strategies.test.ts",
            "--runInBand"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "port": 9229
        }
    ],
    "compounds": [
        {
            "name": "Debug Sample w. Devserver (Chrome)",
            "configurations": [
              "Run Devserver",
              "Debug Sample (Chrome)"
            ]
        }
    ]
}
